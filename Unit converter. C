#include <stdio.h>

int main() {
    float meters, kilometers;
    float grams, kilograms;

    // Input for meter to kilometer conversion
    printf("Enter the distance in meters: ");
    scanf("%f", &meters);
    kilometers = meters / 1000; // Conversion formula
    printf("%.2f meters is equal to %.2f kilometers\n", meters, kilometers);

    // Input for gram to kilogram conversion
    printf("Enter the weight in grams: ");
    scanf("%f", &grams);
    kilograms = grams / 1000; // Conversion formula
    printf("%.2f grams is equal to %.2f kilograms\n", grams, kilograms);

    return 0;
}
